<div class="container mt-4">
    <h2 class="text-center">Registro</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
        
        <!-- Campo de nombre -->
        <div class="mb-3">
            <%= f.label :name, class: 'form-label' %>
            <%= f.text_field :name, autocomplete: "new-name", class: 'form-control', required: true %>
            <% if resource.errors[:name].any? %>
                <div class="invalid-feedback"><%= resource.errors[:name].join(", ") %></div>
            <% else %>
                <div class="invalid-feedback">Por favor, ingresa un nombre válido.</div>
            <% end %>
        </div>

        <!-- Campo de correo electrónico -->
        <div class="mb-3">
            <%= f.label :email, class: 'form-label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true %>
            <% if resource.errors[:email].any? %>
                <div class="invalid-feedback"><%= resource.errors[:email].join(", ") %></div>
            <% else %>
                <div class="invalid-feedback">Por favor, ingresa un correo electrónico válido.</div>
            <% end %>
        </div>

        <!-- Campo de contraseña -->
        <div class="mb-3">
            <%= f.label :password, class: 'form-label' %>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', required: true %>
            <% if resource.errors[:password].any? %>
                <div class="invalid-feedback"><%= resource.errors[:password].join(", ") %></div>
            <% else %>
                <div class="invalid-feedback">Por favor, ingresa una contraseña válida.</div>
            <% end %>
        </div>

        <!-- Confirmar contraseña -->
        <div class="mb-3">
            <%= f.label :password_confirmation, class: 'form-label' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true %>
            <% if resource.errors[:password_confirmation].any? %>
                <div class="invalid-feedback"><%= resource.errors[:password_confirmation].join(", ") %></div>
            <% end %>
            <div class="invalid-feedback">Por favor, confirma tu contraseña.</div>
        </div>

        <!-- Campo de teléfono -->
        <div class="mb-3">
            <%= f.label :phone, class: 'form-label' %>
            <%= f.telephone_field :phone, class: 'form-control', required: true %>
            <% if resource.errors[:phone].any? %>
                <div class="invalid-feedback"><%= resource.errors[:phone].join(", ") %></div>
            <% else %>
                <div class="invalid-feedback">Por favor, ingresa un número de teléfono válido.</div>
            <% end %>
        </div>

        <!-- Campo de dirección -->
        <div class="mb-3">
            <%= f.label :address, class: 'form-label' %>
            <%= f.text_area :address, rows: 3, class: 'form-control', required: true %>
            <% if resource.errors[:address].any? %>
                <div class="invalid-feedback"><%= resource.errors[:address].join(", ") %></div>
            <% else %>
                <div class="invalid-feedback">Por favor, ingresa una dirección válida.</div>
            <% end %>
        </div>

        <!-- Campo de imágenes -->
        <div class="mb-3">
            <%= f.label :images, "Agrega tu imagen de perfil", class: 'form-label' %>
            <%= f.file_field :images, multiple: true, class: 'form-control' %>
            <% if resource.errors[:images].any? %>
                <div class="invalid-feedback"><%= resource.errors[:images].join(", ") %></div>
            <% end %>
        </div>

        <!-- Botón de envío -->
        <div class="text-center">
            <%= f.submit "Registrarse", class: 'btn btn-primary' %>
        </div>
    <% end %>

    <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
    </div>
</div>

<script>
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>
