<h1>Lista de Recicladores</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Teléfono</th>
      <th>Dirección</th>
      <th>Email</th>
      <th>Acciones</th>
    </tr>
  </thead>

<%= link_to 'Nuevo Reciclador', new_recycler_path, class: 'btn btn-primary' %>

  <tbody>
    <% @recyclers.each do |recycler| %>
      <tr>
        <td><%= recycler.name %></td>
        <td><%= recycler.phone %></td>
        <td><%= recycler.address %></td>
        <td><%= recycler.email %></td>
        <td class="d-flex justify-content-evenly">
        <!-- Botón para ingresar nueva entrega -->
        <%= link_to new_recycler_delivery_path(recycler), class: 'btn btn-success btn-sm mx-2' do %>
          Registrar Entrega
        <% end %>

        <!-- Botón para ver detalles de las entregas -->
        <%= link_to recycler_deliveries_path(recycler), class: 'btn btn-info btn-sm mx-2' do %>
          Ver Entregas
        <% end %>

        <!-- Botón para editar el reciclador -->
        <%= link_to edit_recycler_path(recycler), class: 'btn btn-warning btn-sm mx-2' do %>
          Editar Reciclador
        <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
  <%= paginate @recyclers %>
</div>
