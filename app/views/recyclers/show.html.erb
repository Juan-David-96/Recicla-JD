<% content_for :title, "Ver reciclador" %>

<div class="container mt-5">
  <h1 class="text-center mb-4">Detalles del Reciclador: <%= @recycler.name %></h1>

  <!-- Mensaje de notice -->
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>

  <!-- Mostrar detalles del reciclador -->
  <div class="card mb-4">
    <div class="card-body">
      <p><strong>Nombre:</strong> <%= @recycler.name %></p>
      <p><strong>Teléfono:</strong> <%= @recycler.phone %></p>
      <p><strong>Dirección:</strong> <%= @recycler.address %></p>
      <p><strong>Email:</strong> <%= @recycler.email %></p>
    </div>
  </div>

  <!-- Contador de entregas -->
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">Entregas realizadas</h5>
      <p><%= @recycler.deliveries.count %> entregas realizadas</p>
    </div>
  </div>

  <!-- Botones de acción -->
  <div class="d-flex justify-content-center mt-4">
    <%= link_to "Editar este reciclador", edit_recycler_path(@recycler), class: "btn btn-warning mx-2" %>
    <%= link_to "Volver a la lista de recicladores", recyclers_path, class: "btn btn-secondary mx-2" %>
    <%= button_to "Eliminar este reciclador", @recycler, method: :delete, class: "btn btn-danger mx-2", data: { confirm: '¿Estás seguro de que deseas eliminar este reciclador?' } %>
  </div>
</div>
