<h1>Entregas de <%= @recycler.name %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Material</th>
      <th>Fecha de Entrega</th>
      <th>Cantidad</th>
      <th>Acciones</th>
    </tr>
  </thead>

<%= link_to 'Volver a los recicladores', recyclers_path, class: 'btn btn-secondary mx-2' %>
<%= link_to 'Nueva Entrega', new_recycler_delivery_path(@recycler), class: 'btn btn-success' %>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.material.name %></td>
        <td><%= delivery.delivery_date %></td>
        <td><%= delivery.quantity %></td>
        <td>
          <%= link_to 'Ver Detalles', recycler_delivery_path(@recycler, delivery), class: 'btn btn-info' %>
          <%= link_to 'Editar Entrega', edit_recycler_delivery_path(@recycler, delivery), class: 'btn btn-warning btn-sm mx-2' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- PaginaciÃ³n -->
<div class="d-flex justify-content-center">
  <%= paginate @deliveries %>
</div>

