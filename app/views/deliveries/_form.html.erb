<%= form_with(model: [@recycler, @delivery], local: true) do |form| %>
  <% if @delivery.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@delivery.errors.count, "error") %> prohibi√≥ que se guardara la entrega:</h2>
      <ul>
        <% @delivery.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :material_id, "Material" %>
    <%= form.collection_select :material_id, Material.all, :id, :name, { prompt: 'Selecciona un material' }, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :delivery_date, "Fecha de Entrega" %>
    <%= form.date_field :delivery_date, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :quantity, "Cantidad entregada en gramos" %>
    <%= form.number_field :quantity, class: 'form-control', step: "any", required: true %>
  </div>

  <div class="form-group d-flex justify-content-center">
    <%= form.submit "Actualizar Entrega", class: 'btn btn-primary my-4' %>
  </div>
<% end %>
